<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked (On) 상태 -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_checked_color"/> <!-- ON 색상 -->
            <corners android:radius="50dp"/> <!-- 둥글게 -->
        </shape>
    </item>

    <!-- Unchecked (Off) 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_unchecked_color"/> <!-- OFF 색상 -->
            <corners android:radius="50dp"/> <!-- 둥글게 -->
        </shape>
    </item>

</selector>