<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#F5F1EB"
    android:orientation="vertical">

    <!-- Title Layout -->

    <!-- 로그인 섹션 -->
    <LinearLayout
        android:id="@+id/TitleLayout"
        android:layout_width="409dp"
        android:layout_height="71dp"
        android:gravity="center_horizontal|left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="95dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/routie_" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="412dp"
        android:layout_height="419dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="102dp"
            android:layout_height="36dp"
            android:src="@drawable/login_txt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"></LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/idbar" />

            <EditText
                android:id="@+id/editTextTextID"
                android:layout_width="269dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:background="@android:color/transparent"
                android:hint="아이디 입력"
                android:inputType="text" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_PW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pwbar" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="266dp"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:background="@android:color/transparent"
                android:hint="비밀번호 입력"
                android:inputType="textPassword" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="로그인"
                android:paddingLeft="30dp"
                android:src="@drawable/loginbtn" />

            <ImageButton
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="회원가입 페이지 이동"
                android:paddingRight="30dp"
                android:src="@drawable/signup" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>