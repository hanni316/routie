<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login1"
    android:orientation="vertical">

    <!-- Title Layout -->

    <!-- 로그인 섹션 -->

    <LinearLayout
        android:id="@+id/TitleLayout"
        android:layout_width="409dp"
        android:layout_height="71dp"
        android:gravity="center_horizontal|left"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="419dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="102dp"
            android:layout_height="36dp"
            android:src="@drawable/routie_" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"></LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/idbar_2" />

            <EditText
                android:id="@+id/editTextID"
                android:layout_width="269dp"
                android:layout_height="77dp"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:background="@android:color/transparent"
                android:hint="아이디 입력"
                android:inputType="text" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_PW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pwbar_2" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="266dp"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:background="@android:color/transparent"
                android:hint="비밀번호 입력"
                android:inputType="textPassword" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="로그인"
                android:paddingLeft="30dp"
                android:src="@drawable/loginbtn" />

            <ImageButton
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="회원가입 페이지 이동"
                android:paddingRight="30dp"
                android:src="@drawable/signup" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
